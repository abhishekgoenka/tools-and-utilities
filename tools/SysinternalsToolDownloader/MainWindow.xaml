<Window x:Class="SysinternalsToolDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysinternalsToolDownloader"
        mc:Ignorable="d"
        Height="535" Width="525" Title="Sysinternals Tools Downloader" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" Icon="images/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="24*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <!-- Settings -->
        <GroupBox Grid.Row="0" Header="Settings">
            <Grid HorizontalAlignment="Left">
                <Label Content="Select the download location"
		       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
                <RadioButton Content="Current Directory" HorizontalAlignment="Left"
			  Margin="10,41,0,0" VerticalAlignment="Top"/>
                <RadioButton Content="C:\Program Files" HorizontalAlignment="Left"
			  Margin="10,61,0,0" VerticalAlignment="Top"/>

                <Label Content="Other"
		       HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>
                <CheckBox Content="Added folder to system path variable" HorizontalAlignment="Left"
			  Margin="10,125,0,0" VerticalAlignment="Top"/>

            </Grid>
        </GroupBox>
        
        <!-- ProgressBar and execute button -->
        <Grid Grid.Row="1" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="410"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ProgressBar Value="50" Minimum="0" Maximum="100" Grid.Column="0" 
                         Width="350" Height="30" HorizontalAlignment="Left" Margin="10,0,0,0"></ProgressBar>
            <Button Height="30" Width="100" Grid.Column="1" Margin="-10,0,0,0">Start Download
                </Button>

        </Grid>
        
        <!-- Logs -->
        <TextBox Grid.Row="2" HorizontalAlignment="Left" 
                 VerticalAlignment="Top" Width="510" Height="250" TextWrapping="Wrap" AcceptsReturn="True"
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"></TextBox>
    </Grid>
</Window>
